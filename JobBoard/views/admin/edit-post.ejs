<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/post.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <form action="/admin/<% if (editing) { %>edit-post<% } else { %>add-post<% } %>" class="post-form" method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<% if (editing) { %><%= post.title %><% } %>">
            </div>
            <div class="form-control">
                <label for="imageUrl">Image URL</label>
                <input type="text" name="imageUrl" id="imageUrl" value="<% if (editing) { %><%= post.imageUrl %><% } %>">
            </div>
            <div class="form-control">
                <label for="time">Time</label>
                <input type="number" name="time" id="time" value="<% if (editing) { %><%= post.time %><% } %>">
            </div>
            <div class="form-control">
                <label for="duration">Duration</label>
                <input type="number" name="duration" id="duration" value="<% if (editing) { %><%= post.duration %><% } %>">
            </div>
            <div class="form-control">
                <label for="slots">Slots</label>
                <input type="number" name="slots" id="slots" value="<% if (editing) { %><%= post.slots %><% } %>">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5"><% if (editing) { %><%= post.description %><% } %></textarea>
            </div>
            <% if (editing) { %>
                <input type="hidden" value="<%= post._id %>" name="postId">
            <% } %>
            <button class="btn" type="submit"><% if (editing) { %>Update Post<% } else { %>Add Post<% } %></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>