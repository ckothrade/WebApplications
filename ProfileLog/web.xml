<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
  <display-name>Profile Logs Example</display-name>
  <description>Servlet with XML datasets</description>
  <servlet>
    <servlet-name>ProfileLog</servlet-name>
    <servlet-class>com.jbrewer.webapps.proflogs.ProfileServlet</servlet-class>
    <init-param>
    	<param-name>profiles</param-name>
    	<param-value>profiles.xml</param-value>
  	</init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
	
  <servlet-mapping>
    <servlet-name>ProfileLog</servlet-name>
    <url-pattern>/profiles</url-pattern>
  </servlet-mapping>

</web-app>