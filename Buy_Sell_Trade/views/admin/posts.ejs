<%- include('../includes/head.ejs') %>
  <link rel="stylesheet" href="/css/post.css">
</head>

<body>
  <%- include('../includes/navigation.ejs') %>

  <main>
    <% if (posts.length > 0) { %>
      <div class="grid">
        <% for (let p of posts) { %>
          <article class="card post-item">
            <header class="card__header">
              <h1 class="post__title">
                <%= p.title %>
              </h1>
            </header>
            <div class="card__image">
              <img src="/<%= p.imageUrl %>" alt="<%= p.title %>">
            </div>
            <div class="card__content">
              <h2 class="post__price">Price: $<%= p.price %></h2>
              <h2 class="post__quantity">Qty:  <%= p.quantity %></h2>
              <h2 class="post__category">Category:  <%= p.category %></h2>
              <h2 class="post__condition">Condition:  <%= p.condition %></h2>
            </div>
            <div class="card__actions">
              <a href="/admin/edit-post/<%= p._id %>?edit=true" class="btn">Edit</a>
              <form action="/admin/delete-post" method="POST">
                <input type="hidden" value="<%= p._id %>" name="postId">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button class="btn" type="submit">Delete</button>
              </form>
            </div>
          </article>
        <% } %>
      </div>
    <% } else { %>
      <h1>No Posts Found!</h1>
    <% } %>
  </main>
<%- include('../includes/end.ejs') %>