<%- include('../includes/head.ejs') %>
  <link rel="stylesheet" href="/css/post.css">
</head>

<body>
  <%- include('../includes/navigation.ejs') %>

  <main>
    <% if (items.length > 0) { %>
      <div class="grid">
        <% for (let i of items) { %>
          <article class="card post-item">
            <header class="card__header">
              <h1 class="post__title">
                <%= i.title %>
              </h1>
            </header>
            <div class="card__image">
              <img src="/<%= i.imageUrl %>" alt="<%= i.title %>">
            </div>
            <div class="card__content">
              <h2 class="post__price">Price: $<%= i.price %></h2>
              <h2 class="post__quantity">Qty:  <%= i.quantity %></h2>
              <h2 class="post__category">Category:  <%= i.category %></h2>
              <h2 class="post__condition">Condition:  <%= i.condition %></h2>
              <h2 class="post__location">Location:  <%= i.location %></h2>
              <p class="post__description"><%= i.description %></p>
            </div>
            <div class="card__actions">
              <a href="/posts/<%= i._id %>" class="btn">Details</a>
                <% if (isAuthenticated) { %>
                  <%- include('../includes/add-to-bookmark.ejs', {item: i}) %>
                <% } %>
            </div>
          </article>
        <% } %>
      </div>
    <% } else { %>
      <h1>No Posts Found!</h1>
    <% } %>
  </main>
<%- include('../includes/end.ejs') %>