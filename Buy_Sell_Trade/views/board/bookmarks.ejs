<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/schedule.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (items.length > 0) { %>
                <ul class="sched__item-list">
                    <% items.forEach(p => { %>
                        <li class="sched__item">
                            <h1><%= p.postId.title %></h1>
                            <a href="/posts/<%= p.postId._id %>">Details</a>
                            <form action="/bookmarks-remove-item" method="POST">
                                <input type="hidden" value="<%= p.postId._id %>" name="postId">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <button class="btn danger" type="submit">Remove</button>
                            </form>
                        </li>
                    <% }) %>
                </ul>
            <% } else { %>
                <h1>You Don't Have Any Posts Saved!</h1>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>